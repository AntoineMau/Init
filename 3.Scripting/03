#!/bin/bash
PATH_OLD=`pwd`
cd ..
clear
echo "==========> GIT STATUS <=========="
echo ""
git status
read -p "Entre les fichiers que tu veux add: " FILES
echo "==========> GIT ADD <=========="
echo ""
git add $FILES
read -p "Entre le message que tu veux commit: " MSG
echo "==========> GIT COMMIT <=========="
echo ""
git commit -m "$MSG"
echo "==========> GIT PUSH <=========="
echo ""
git push
echo "==========> GIT STATUS <=========="
echo ""
git status
cd $PATH_OLD
