#!/bin/bash

PATH_OLD=`pwd`
cd ..
clear
echo ""
echo "==========> GIT STATUS <=========="
echo ""
git status
echo ""
echo "==========> GIT ADD <=========="
echo ""
read -p "Entre les fichiers que tu veux add: " FILES
echo ""
git add $FILES
echo ""
echo "==========> GIT COMMIT <=========="
echo ""
read -p "Entre le message que tu veux commit: " MSG
echo ""
git commit -m "$MSG"
echo ""
echo "==========> GIT PUSH <=========="
echo ""
git push
echo ""
echo "==========> GIT STATUS <=========="
echo ""
git status
cd $PATH_OLD
