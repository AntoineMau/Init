#!/bin/bash

PATH_OLD=`pwd`
cd ..
clear
echo "
==========> GIT STATUS <==========
"
git status
echo "
==========> GIT ADD <==========
"
read -p "Entre les fichiers que tu veux add: " FILES
echo ""
git add $FILES
echo "
==========> GIT COMMIT <==========
"
read -p "Entre le message que tu veux commit: " MSG
echo ""
git commit -m "$MSG"
echo "
==========> GIT PUSH <==========
"
git push
echo "
==========> GIT STATUS <==========
"
git status
cd $PATH_OLD
