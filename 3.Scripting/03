#!/bin/bash
clear
read -p "Entre le chemin ou tu veux git push: " CHEMIN
cd $CHEMIN
echo -e "\n===============> GIT STATUS <===============\n"
TEST=`git status | grep add`
echo ""
echo ""
echo $TEST
echo ""
echo ""
if [[ -n $TEST ]]
then
    git status
    echo -e "\n===============> GIT ADD <===============\n"
    read -p "Entre les fichiers que tu veux add: " FILES
    git add $FILES
    echo -e "\n===============> GIT COMMIT <===============\n"
    read -p "Entre le message que tu veux commit: " MSG
    echo ""
    git commit -m "$MSG"
    echo -e "\n===============> GIT PUSH <===============\n"
    git push
    echo -e "\n===============> GIT STATUS <===============\n"
fi

git status
cd $OLDPWD
